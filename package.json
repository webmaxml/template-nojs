{
  "name": "template-nojs",
  "version": "1.0.0",
  "description": "template for html and css only",
  "scripts": {
    "sass-watch": "sass src/sass/index.scss:dist/css/style.css --watch",
    "sass-build": "sass src/sass/index.scss:dist/css/style.css --no-source-map",
    "sync": "browser-sync start --server dist --files dist --no-notify --no-online --no-ui --no-ghost-mode --no-open",
    "postcss": "postcss dist/css/style.css > dist/css/style.min.css --verbose",
    "dev": "concurrently \"npm run sync\" \"npm run sass-watch\"",
    "build": "npm run sass-build && npm run postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webmaxml/template-nojs.git"
  },
  "keywords": [],
  "author": "webmaxml",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/webmaxml/template-nojs/issues"
  },
  "homepage": "https://github.com/webmaxml/template-nojs#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.2"
  }
}
